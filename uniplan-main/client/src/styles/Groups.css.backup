/* Groups Container */
.groups-container {
    padding: 2rem;
    height: 100%;
    overflow-y: auto;
}

.groups-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.groups-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
}

.group-card {
    background: var(--bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    cursor: pointer;
    transition: all 0.2s;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: var(--shadow-md);
}

.group-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
}

.group-card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.group-icon {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    box-shadow: 0 4px 10px rgba(99, 102, 241, 0.3);
}

.group-info h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 4px;
    color: var(--text-main);
}

.group-info p {
    font-size: 0.85rem;
    color: var(--text-muted);
}

.group-members-preview {
    display: flex;
    align-items: center;
}

.member-avatar-sm {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 2px solid var(--bg-card);
    background: #cbd5e1;
    /* Light mode placeholder */
    color: var(--text-main);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    margin-left: -10px;
    font-weight: 600;
}

[data-theme='dark'] .member-avatar-sm {
    background: #475569;
    color: white;
}

.member-avatar-sm:first-child {
    margin-left: 0;
}

/* Group Detail Page */
.group-detail-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    background: var(--bg-glass);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border-color);
}

.group-detail-header {
    padding: 1.5rem 2rem;
    background: var(--bg-card);
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.group-tabs {
    display: flex;
    gap: 1rem;
    padding: 0 2rem;
    background: var(--bg-card);
    border-bottom: 1px solid var(--border-color);
}

.group-tab {
    padding: 1rem;
    cursor: pointer;
    color: var(--text-muted);
    border-bottom: 2px solid transparent;
    transition: all 0.2s;
    font-weight: 500;
}

.group-tab:hover {
    color: var(--text-main);
}

.group-tab.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
}

.group-content {
    flex: 1;
    overflow: hidden;
    padding: 2rem;
    position: relative;
    background: var(--bg-main);
}

/* Group Components */
.group-section {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.member-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.member-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background: var(--bg-card);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-sm);
}

.role-badge {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 600;
}

.role-admin {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
}

.role-member {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
}

.qr-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 2rem;
    background: white;
    border-radius: var(--radius-lg);
    width: fit-content;
    margin: 0 auto;
    box-shadow: var(--shadow-md);
}

.qr-code {
    width: 200px;
    height: 200px;
    background: #000;
}